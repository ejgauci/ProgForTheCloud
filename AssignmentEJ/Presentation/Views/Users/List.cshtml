@model IEnumerable<Presentation.Models.Upload>

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a href="/Users/Send">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Date Sent
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>

                @{
                    DateTime dt = item.DateSent.ToDateTime();
                }

                <span>@dt.ToString("f")</span>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @if (string.IsNullOrEmpty(item.AttachmentUri) == false)
                {

                    <a href="@item.AttachmentUri">Download Doc</a>
                }
            </td>
            <td>
                @if (string.IsNullOrEmpty(item.ConvertedUri) == false)
                {

                    <a href="@item.ConvertedUri">Download PDF</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
